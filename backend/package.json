{
  "name": "fundilink",
  "version": "1.0.0",
  "description": "FundiLink - Connect clients to trusted local freelancers",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "twilio": "^4.15.0",
    "axios": "^1.5.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "freelance",
    "booking",
    "whatsapp",
    "mpesa",
    "service"
  ],
  "author": "FundiLink Team",
  "license": "MIT"
} 